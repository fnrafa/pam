<resources>
    <style name="Theme.PAMRafa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/stroke</item>
        <item name="colorOnPrimary">@color/headline</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/highlight</item>
        <item name="colorSecondaryVariant">@color/tertiary</item>
        <item name="colorOnSecondary">@color/component_text</item>

        <!-- Background colors. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/component</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
